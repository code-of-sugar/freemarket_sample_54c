  .swiper-button-prev
  .swiper-button-next

.favcategory-container
  %h2
    人気のカテゴリー
  %ul.favcategory-box
    %li.item
      =link_to "レディース", root_path
    %li.item
      =link_to "メンズ", root_path
    %li.item
      =link_to "家電・スマホ・カメラ", root_path
