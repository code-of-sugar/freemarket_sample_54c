      =image_tag "/assets/bannartop.png",alt:"バナー1"
    .swiper-slide
      =image_tag "/assets/bannartop2.png",alt:"バナー2"
    .swiper-slide
      =image_tag "/assets/topbannermain892151cc75b1f6a1285bf7943c9b933c.png", alt:"バナー背景"
