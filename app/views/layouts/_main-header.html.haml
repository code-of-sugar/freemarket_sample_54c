%header.main-header
  .header-wrap
    .header-upper
      .header-upper__logo
        = embedded_svg("logo-acdd90ac4f472d5a6f7a330d33ab1225.svg")
      .header-upper__search-field
        =form_with url: root_path,html: {class: 'formclass'} do |f|
          =f.label :search
          =f.text_field :search
          %i.fa.fa-search
    .header-lower
      .header-lower-left
        .header-lower-left__category-search
          =link_to root_path do
            %i.fa.fa-list-ul
            %span カテゴリーから探す
        .header-lower-left__brand-search
          =link_to root_path do
            %i.fa.fa-tag
            %span ブランドから探す
      .header-lower-right
        -if user_signed_in?
          .header-lower-right__like
            =link_to root_path do
              %i.far.fa-heart
              %span
                いいね!一覧
          .header-lower-right__notification
            =link_to root_path do
              %i.far.fa-bell
              %span
                お知らせ
          .header-lower-right__todolist
            =link_to root_path do
              %i.fas.fa-check
              %span
                やることリスト
          .header-lower-right__mypage
            =link_to top_mypage_path do
              =image_tag asset_path("member.jpg")
              %span
                マイページ
        -else
          .header-lower-right__signup
            =link_to registration_signup_index_path do
              %span 新規会員登録
          .header-lower-right__login
            =link_to new_user_session_path do
              %span ログイン